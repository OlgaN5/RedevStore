<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>RedevStore</title>
	</head>
	<body>
		<section class="prompt">
			<h1>Sign in</h1>
				<form action="/api/auth/login/password" method="post">
				<section>
					<label for="login">Login</label>
					<input id="login" name="login" type="text" autocomplete="login" required autofocus>
				</section>
				<section>
					<label for="current-password">Password</label>
					<input id="current-password" name="password" type="password" autocomplete="current-password" required>
				</section>
				<button type="submit">Sign in</button>
			</form>
			<a class="button google" href="/api/auth/login/federated/google">Sign in with Google</a>
		</section>
	</body>
</html>